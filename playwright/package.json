{
  "name": "puppies-and-kittens-adoption-playwright-tests",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "scripts": {
    "prelighthouse": "rimraf lighthouse-audit-reports && mkdirp lighthouse-audit-reports",
    "lighthouse": "npx playwright test --project=\"lighthouse desktop\" --project=\"lighthouse mobile\"",
    "lighthouse:ci": "npm run prelighthouse && npx playwright test --project=\"lighthouse desktop\" --project=\"lighthouse mobile\" --shard",
    "start:both": "concurrently \"cd .. && npm run start\" \"cd ../src/server && node startServer.js\"",
    "test:base": "npx playwright test",
    "test": "npm run test:base --",
    "test:debug": "npm run test -- --debug",
    "test:headed": "npm run test -- --headed",
    "test:help": "npm run test -- --help",
    "test:list": "npm run test -- --list",
    "test:match": "npm run test -- --grep",
    "test:project": "npm run test -- --project",
    "test:report": "npx playwright show-report",
    "test:trace": "npm run test -- --trace=on",
    "test:ui": "npm run test -- --ui",
    "test:update-snapshots": "npm run test -- --update-snapshots",
    "ui:ci": "npm run prelighthouse && npx playwright test --project=\"desktop view\" --project=\"mobile view\" --project=\"lighthouse desktop\" --project=\"lighthouse mobile\" --shard",
    "visual": "npx playwright test --project=\"desktop view\" --project=\"mobile view\"",
    "visual:ci": "npx playwright test --project=\"desktop view\" --project=\"mobile view\" --shard"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.43.1",
    "lighthouse": "^12.0.0",
    "mkdirp": "^3.0.1",
    "playwright": "^1.43.1",
    "rimraf": "^5.0.5",
    "typescript": "^4.9.5"
  }
}
